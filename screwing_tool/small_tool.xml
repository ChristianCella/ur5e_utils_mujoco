<mujoco model="small_tool">
  <!-- <compiler meshdir="." angle="degree" coordinate="local"/> -->
  <compiler angle="radian"/>
  <option timestep="0.01"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <mesh name="screw_tool_mesh" file="Small_screwdriver.obj"/> 
  </asset>

  <default>
    <geom condim="3" friction="1 0.5 0.01" solref="0.02 1" solimp="0.9 0.95 0.001"/>
  </default>

  <worldbody>
    <body name="screw_top" pos="0 0 0">
      <geom type="mesh" mesh="screw_tool_mesh" rgba="0.7 0.7 0.7 1" contype="0" conaffinity="0" group="0"/>
      <!-- collision cylinder -->
      <geom type="cylinder" size="0.025 0.10" pos="0 0 0.10"
            rgba="0.2 0.8 0.2 1" mass="0.2"
            contype="1" conaffinity="1" group="3"/>
      <site name="mount_site" pos="0 0 0" size="0.005" rgba="1 0 0 1"/>
    </body>
  </worldbody>
</mujoco>
